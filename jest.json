{
  "globals":{
    "ts-jest":{
      "enableTsDiagnostics": true,
      "tsConfigFile": "./tsconfig.json"
    }
  },
  "jest": {
    "transform":{
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [ "ts","js", "json"]
  }
}