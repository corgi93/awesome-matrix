{
    "name": "lesson",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "start": "ts-node ./src/index.ts",
        "build": "tsc",
        "test": "jest",
        "lint": "tslint --project .",
        "precommit": "lint-staged"
    },
    "bin": {
        "matrix": "./build/cli.js"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts}": ["tslint --fix", "prettier --write", "git add"],
        "*.json": ["prettier --write", "git add"]
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "diagnostics": true,
                "tsConfig": "./tsconfig.json"
            }
        },
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
        "moduleFileExtensions": ["ts", "js", "json"],
        "moduleDirectories": ["<rootDir>/src", "node_modules"]
    },
    "author": "",
    "license": "ISC",
    "description": "",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^23.3.2",
        "@types/node": "^10.10.1",
        "husky": "^1.1.2",
        "jest": "^23.6.0",
        "lint-staged": "^7.3.0",
        "prettier": "1.14.3",
        "ts-jest": "^23.10.1",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "typescript": "^3.1.2"
    }
}
